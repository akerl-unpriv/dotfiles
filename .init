#!/usr/bin/env bash

[[ -z "$1" ]] && exit

case "$1" in
    'start')
        (cd ; tmux new-session -d -s main -n shell 'zsh')
        if [ "$(uname)" == 'Linux' ] ; then
            command -v weechat-curses >&/dev/null && tmux new-window -t main:2 -n weechat 'weechat-curses'
            true
        fi
    ;;
    'stop')
        tmux kill-session -t main
    ;;
esac

