[core]
    pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
    patch = !git --no-pager diff --no-color

[commit]
    template = ~/.gitmessage

[diff]
    indentHeuristic = true

[help]
    autocorrect = 1

[merge]
    ff = only

[push]
    default = current

[status]
    submoduleSummary = true

[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
    insteadOf = "github:"

[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
    insteadOf = "gist:"

[user]
    name = Les Aker
    email = me@lesaker.org

[versionsort]
    prereleaseSuffix = -rc

[include]
    path = ~/.gitconfig.d/local
