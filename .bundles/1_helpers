alias d='docker'
alias z=ssh
alias c=hss
alias ccp='scp -S hss'
export HSS_PASS='ssh'

export GOPATH=$HOME/.go

export REQUESTS_CA_BUNDLE=/opt/boxen/homebrew/etc/openssl/cert.pem

alias cld='cd;clear'
alias atree='tree -a -I ".git"'
alias ta='tmux attach -d'
alias ddd='~/.../... update && ~/.../... install'
alias v=vim
alias l='ls -la'
alias a=ag

alias rs="(cd ~/src && repo_sync)"

alias gs='git status'
alias gd='git diff'
alias gc='git commit'
alias gp='git push'
alias ga='git add'
alias gap='git add -p'
alias gr='git remote -v'
alias gl='git log'
alias gi='git issue'
alias gsu="git submodule foreach 'git pull origin master && git submodule update --init --recursive'"
alias gsi='git submodule update --init'
alias gpr='git pull --rebase'
alias gtp='git push --tags'
alias gdc='git diff --cached'
alias gcm='git checkout master'
alias gt='git fetch --tags origin'
alias gg='git gem'

alias map="xargs -n1"
alias mapp="xargs -n1 -I{}"

function ff () {
    local filename="$1"
    shift 1
    find . -name "$filename" | xargs grep $@
}

function kgpg () {
    ps aux | awk '/[g]pg-agent --daemon/ {print $2}' | xargs kill -9
    [[ -e ~/.bundles/gpg-agent ]] && source ~/.bundles/gpg-agent
}

function pip2-upgrade () { for package in $(pip2 freeze | sed 's/==.*//') ; pip2 install --upgrade $package ; }
function pip3-upgrade () { for package in $(pip3 freeze | sed 's/==.*//') ; pip3 install --upgrade $package ; }

function dv () { [ -n "$VIRTUAL_ENV" ] && deactivate ; }

alias p=pry
alias irb=pry

alias tf=terraform
alias tfa='terraform apply'
alias tfp='terraform plan'
