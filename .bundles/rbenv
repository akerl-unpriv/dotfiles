if [ ! -e /opt/boxen/rbenv ] ; then return ; fi

export PATH="/opt/boxen/rbenv/shims:${PATH}"
source "/opt/boxen/rbenv/libexec/../completions/rbenv.zsh"
rbenv rehash 2>/dev/null || return

rbenv() {
  typeset command
  command="$1"
  if [ "$#" -gt 0 ]; then
    shift
  fi

  case "$command" in
  rehash|shell)
    eval `rbenv "sh-$command" "$@"`;;
  *)
    command rbenv "$command" "$@";;
  esac
}

export RBENV_PATH="$(rbenv prefix)"

alias be='bundle exec'
alias bert='bundle exec rake test'
alias bemr='bundle exec rake module:release'
