if [ "$(uname)" != "Darwin" ]; then return ; fi

basepath="$(dirname $(which zsh))/../share"
fpath=(~/.completions $basepath/zsh-completions $basepath/zsh/functions $basepath/zsh/site-functions)

alias sha512sum='shasum -a 512'
alias sha256sum='shasum -a 256'

alias c='hss'
alias ccp='scp -S hss'
export HSS_PASS='ssh'

alias g='gist -c'

